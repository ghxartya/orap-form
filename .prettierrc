{
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/components(/.*)?$",
    "^@/providers(/.*)?$",
    "^@/shared(/.*)?$",
    "^@/assets(/.*)?$",
    "^@/config(/.*)?$",
    "^@/layout(/.*)?$",
    "^@/store(/.*)?$",
    "^@/hooks(/.*)?$",
    "^@/types(/.*)?$",
    "^@/utils(/.*)?$",
    "^@/api(/.*)?$",
    "^@/ui(/.*)?$",
    "^../(.+)$",
    "^./(.+)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
